{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "noEmit": false
  },
  "include": [
    "server/index.production.ts",
    "server/routes.production.ts", 
    "server/storage.ts",
    "server/db.ts",
    "shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src",
    "components",
    "App.tsx",
    "*.expo.*",
    "server/storage-old.ts",
    "server/vite.ts",
    "server/replitAuth.ts",
    "vite.config.ts"
  ]
}